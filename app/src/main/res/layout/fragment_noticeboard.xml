<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="main"
            type="com.example.growlineapp.ui.view.main.fragment.noticeboard.NoticeboardFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.growlineapp.ui.view.main.fragment.noticeboard.NoticeboardFragment"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="40dp"
            android:background="@color/white">
            <Button
                android:id="@+id/post_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="+"
                android:textSize="35sp"
                android:background="@drawable/post_btn"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>



    </RelativeLayout>
</layout>
